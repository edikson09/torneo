@page
@model Torneo.App.Frontend.Pages.Posiciones.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear Posición</a>
<h1 style="text-align: center;">Listado de Posiciones</h1>
<br>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th style="text-align: center;" scope="col">Nombre</th>
            <th style="text-align: center;" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var posicion in Model.posiciones)
        {
            <tr>
                <th>@posicion.Id</th>
                <td style="text-align: center;">@posicion.Nombre</td>
                <td>
                    <div style="text-align: center;">
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@posicion.Id">
                            Detalle
                        </a>
                        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@posicion.Id">
                            Editar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table
