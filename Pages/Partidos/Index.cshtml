@page
@model Torneo.App.Frontend.Pages.Partidos.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear Partido</a>
<h1 style="text-align: center;">Listado de Partidos</h1>
<br>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th style="text-align: center;" scope="col">EquipoLocal</th>
            <th style="text-align: center;" scope="col">EquipoVisitante</th>
            <th style="text-align: center;" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partido in Model.partidos)
        {
            <tr>
                <th scope="row">@partido.Id</th>
                <td style="text-align: center;">@partido.Local.Nombre</td>
                <td style="text-align: center;">@partido.Visitante.Nombre</td>
                <td>
                    <div style="text-align: center;">
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@partido.Id">
                            Detalle
                        </a>
                        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@partido.Id">
                            Editar
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>