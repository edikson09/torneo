@page
@model Torneo.App.Frontend.Pages.DTs.IndexModel
@{
}

<h1 style="text-align:center">Listado de Directores Técnicos</h1><br>
<br>
<div style="text-align: right;">
    <a class="btn btn-primary" asp-page="./Create">Crear Director Técnico</a>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th style="text-align:center" scope="col">Nombre</th>
            <th style="text-align:center" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dts in Model.dts)
        {
            <tr>
                <th scope="row">@dts.Id</th>
                <td style="text-align:center">@dts.Nombre</td>
                <td>
                    <div style="text-align: center;">
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@dts.Id">
                            Detalle
                        </a>
                        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@dts.Id">
                            Editar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
