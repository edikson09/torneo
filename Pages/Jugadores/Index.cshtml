@page
@model Torneo.App.Frontend.Pages.Jugadores.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear Jugador</a>
<h1 style="text-align: center;">Listado de Jugadores</h1>
<br>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th style="text-align: center;" scope="col">Nombre</th>
            <th style="text-align: center;" scope="col">Número</th>
            <th style="text-align: center;" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <th scope="row">@jugador.Id</th>
                <td style="text-align: center;">@jugador.Nombre</td>
                <td style="text-align: center;">@jugador.Numero</td>
                <td>
                    <div style="text-align: center;">
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@jugador.Id">
                            Detalle
                        </a>
                        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@jugador.Id">
                            Editar
                        </a>

                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>