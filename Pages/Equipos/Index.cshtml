@page
@model Torneo.App.Frontend.Pages.Equipos.IndexModel
@{
}
<form method="post">
    <div class="input-group mb-3">
        <select asp-for="MunicipioSelected" asp-items="@Model.MunicipioOptions" name="idMunicipio" class="form-control">
            <option value="-1">Ver todos</option>
        </select>
        <button class="btn btn-outline-secondary" asp-page-handler="Filtro">
            Filtrar
        </button>
    </div>
</form>
<form method="post">
    <div class="input-group mb-3">
        <input asp-for="@Model.BusquedaActual" name="nombre" class="form-control">
        <button class="btn btn-outline-secondary" asp-page-handler="Buscar">
            Buscar
        </button>
    </div>
</form>
<h1 style="text-align: center;">Listado de Equipos</h1>
<br>
<div style="text-align: right;">
    <a class="btn btn-primary" asp-page="./Create">Crear Equipo</a>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th style="text-align: center;" scope="col">Nombre</th>
            <th style="text-align: center;" scope="col">Municipio</th>
            <th style="text-align: center;" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model.equipos)
        {
            <tr>
                <th scope="row">@equipo.Id</th>
                <td style="text-align: center;">@equipo.Nombre</td>
                <td style="text-align: center;">@equipo.Municipio.Nombre</td>
                <td>
                    <div style="text-align: center;">
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@equipo.Id">
                            Detalle
                        </a>
                        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@equipo.Id">
                            Editar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>