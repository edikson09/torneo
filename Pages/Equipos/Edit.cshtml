@page
@model Torneo.App.Frontend.Pages.Equipos.EditModel
@{
}
<h1>Editar equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Id">Id</label>
        <input asp-for="equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre">Nombre</label>
        <input asp-for="equipo.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="MunicipioSelected">Municipo</label>
        <select asp-for="MunicipioSelected" asp-items="@Model.MunicipioOptions" name="idMunicipio" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DTSelected">Director Técnico</label>
        <select asp-for="DTSelected" asp-items="@Model.DTOptions" name="idDT" class="form-control">
        </select>
    </div>
    <br>
    <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Editar equipo</button>
</form>
<a class="btn btn-secondary" type="button" asp-page="./Index">Volver</a>

</div>
